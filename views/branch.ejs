<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="../stylesheets/branch.css">
    <link rel="stylesheet" href="../stylesheets/navbar.css">
</head>

<body>

    <!-- Navbar -->
    <%- include('partials/navbar', { user: user }) %>

    <main>
        <!-- Main Section -->
        <section id="main">
            <h1 id="main"><%= branch %> Branch Visited Companies</h1>
        </section>

        <!-- Welcome Section -->
        <section id="welcome">
            <h1 id="welcome1">Welcome, <%= user.fullname %>!</h1>
        </section>

        <!-- User Information -->
        <section class="user-info">
            <ul>
                <li><strong>Enrollment No:</strong> <%= user.Enumber %></li>
                <li><strong>Role of Interest:</strong> <%= user.domain %></li>
            </ul>
        </section>

        <!-- Companies Section -->
        <section id="companies" class="container4">
            <h2>Top Companies</h2>
            <div class="box">
                <div class="scroll-container">
                    <% if (cmps && cmps.length > 0) { %>
                        <% cmps.forEach(comp => { %>
                            <div class="company-box">
                                <h3>
                                    <a href="/company/<%= branch %>/<%= comp._id %>">
                                        <%= comp.CompanyName %>
                                    </a>
                                </h3>
                                <p><strong>Last Date:</strong> <%= comp.LastDate %></p>
                                <p><strong>Status:</strong> <span class="active"><%= comp.Status %></span></p>
                                <p><strong>Dream Tier:</strong> <%= comp.criteria %></p>
                                <p><strong>Role:</strong> <span class="placement"><%= comp.Role %></span></p>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p>No companies available at the moment.</p>
                    <% } %>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2024 NIT Agartala. All Rights Reserved.</p>
    </footer>

</body>

</html>
