    <script>
        function goToBranch() {
            const branch = document.getElementById('branch').value;
            const link = document.getElementById('branchLink');
            link.href = `/branch/${branch}`;
        }
    </script>
     <footer class="footer">
        <p>@Developed by Vinay, Vivek & Venkat.</p>
    </footer>

</body>
</html>
